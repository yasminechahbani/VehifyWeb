{% extends 'base.html.twig' %}

{% block title %}Driver's License Quiz{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .quiz-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .question {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        .question-header {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 15px;
        }
        .options label {
            display: block;
            margin-bottom: 10px;
            cursor: pointer;
        }
        .options input[type="radio"] {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5 quiz-container">
        <h1 class="mb-4 text-center">Driver's License Quiz</h1>

        <div class="card shadow">
            <div class="card-body">
                <form method="post" action="{{ path('app_quiz_submit') }}">
                    {% for question in questions %}
                        <div class="question">
                            <div class="question-header">
                                {{ question.questionNumber }}. {{ question.questionText }}
                            </div>
                            <div class="options">
                                {% for option in question.options %}
                                    {% set optionLetter = option|slice(0, 1) %}
                                    <label>
                                        <input type="radio" name="answers[{{ loop.parent.loop.index0 }}]" value="{{ optionLetter }}" required>
                                        {{ option }}
                                    </label>
                                {% endfor %}
                                <input type="hidden" name="correct_answers[{{ loop.index0 }}]" value="{{ question.correctAnswer }}">
                            </div>
                        </div>
                    {% endfor %}

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Quiz</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}