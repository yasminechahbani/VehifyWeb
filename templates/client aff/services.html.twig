                        },
                        function(error) {
                            alert("Erreur de gÃ©olocalisation. Veuillez l'activer dans votre navigateur.");
                            const btn = document.getElementById('sortByDistance');
                            btn.innerHTML = '<i class="fas fa-map-marker-alt me-2"></i>Trier par distance';
                            btn.disabled = false;
                        }
                    );
                } else {
                    alert("Votre navigateur ne supporte pas la gÃ©olocalisation");
