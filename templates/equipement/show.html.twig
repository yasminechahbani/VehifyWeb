{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipement{% endblock %}

{% block body %}
    <div class="container">
        <h1>Détails de l'Équipement</h1>

        <div class="card">
            <h5>{{ equipement.nom }}</h5>
            <p><strong>ID :</strong> {{ equipement.idEquipement }}</p>
            <p><strong>Description :</strong> {{ equipement.description }}</p>
            <p><strong>Catégorie :</strong> {{ equipement.categorie }}</p>
            <p><strong>État :</strong> {{ equipement.etat }}</p>

            <div class="card-footer">
                <a href="{{ path('app_equipement_index') }}">⬅️ Retour à la liste</a>
                <a href="{{ path('app_equipement_edit', {'idEquipement': equipement.idEquipement}) }}">✏️ Modifier</a>
                {{ include('equipement/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
