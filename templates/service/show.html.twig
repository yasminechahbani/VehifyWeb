{% extends 'base.html.twig' %}

{% set active_page = 'home' %}

{% block title %}Service Details{% endblock %}

{% block content %}
    <div class="container-fluid py-5">
        <div class="container">
            <h1 class="display-4 mb-4">Service Details</h1>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3>{{ service.nom }}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Service ID</th>
                                <td>{{ service.idService }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ service.nom }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ service.type }}</td>
                            </tr>
                            <tr>
                                <th>Opening Hours</th>
                                <td>{{ service.getHeureOuverture() }}</td>
                            </tr>
                            <tr>
                                <th>Closing Hours</th>
                                <td>{{ service.getHeureFermeture() }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ service.prix }} TND</td>
                            </tr>
                            <tr>
                                <th>Region</th>
                                <td>{{ service.gouvernerat }}</td>
                            </tr>
                            <tr>
                                <th>Phone Number</th>
                                <td>{{ service.numero }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ service.description }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ service.email }}</td>
                            </tr>
                            <tr>
                                <th>Coordonn√©es</th>
                                <td>Latitude: {{ service.latitude }}, Longitude: {{ service.longitude }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_serve_index') }}" class="btn btn-secondary">Back to list</a>
                        <a href="{{ path('app_serve_edit', {'id_service': service.idService}) }}" class="btn btn-primary">Edit</a>
                        {{ include('service/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}