{% extends 'base.html.twig' %}

{% set active_page = 'home' %}

{% block title %}Reservations Management{% endblock %}

{% block content %}
    <div class="container-fluid py-5">
        <div class="container">
            <h1 class="display-4 mb-4">Reservations Management</h1>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recherche de réservations</h5>
                    {{ form_start(search_form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-3">
                            {{ form_widget(search_form.dateReservation, {'attr': {'class': 'form-control'}, 'error_bubbling': false}) }}
                            {{ form_label(search_form.dateReservation) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_widget(search_form.serviceId, {'attr': {'class': 'form-control'}, 'error_bubbling': false}) }}
                            {{ form_label(search_form.serviceId) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_widget(search_form.vehiculeId, {'attr': {'class': 'form-control'}, 'error_bubbling': false}) }}
                            {{ form_label(search_form.vehiculeId) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_widget(search_form.userId, {'attr': {'class': 'form-control'}, 'error_bubbling': false}) }}
                            {{ form_label(search_form.userId) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Rechercher</button>
                            <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Réinitialiser</a>
                        </div>
                    {{ form_end(search_form) }}
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Service</th>
                            <th>Vehicle</th>
                            <th>Client</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }}</td>
                            <td>{{ reservation.heureReservation }}</td>
                            <td>{{ reservation.serviceId.nom ?? '' }}</td>
                            <td>{{ reservation.vehiculeId.immatriculation ?? '' }}</td>
                            <td>{{ reservation.userId.email ?? '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_reservation_show', {'id_reservation': reservation.id}) }}" class="btn btn-info btn-sm">Show</a>
                                    <a href="{{ path('app_reservation_edit', {'id_reservation': reservation.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                    {{ include('reservation/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No reservations found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <a href="{{ path('app_reservation_new') }}" class="btn btn-success">Create New Reservation</a>
            </div>
        </div>
    </div>
{% endblock %}
