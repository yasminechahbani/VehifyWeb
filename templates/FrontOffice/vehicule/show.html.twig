{% extends 'FrontOffice/base.html.twig' %}
{% set active_page = 'vehicules' %}

{% block title %}Détails du véhicule{% endblock %}

{% block content %}
<!-- Header avec image -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url({{ asset('img/carousel-bg-1.jpg') }});">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Détails du véhicule</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_vehicule_index') }}">Véhicules</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Détail</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Détails véhicule -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4 p-4">
                <h2 class="mb-4 text-center text-primary">Informations du véhicule</h2>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Marque</label>
                        <div class="form-control bg-light">{{ vehicule.marque }}</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Modèle</label>
                        <div class="form-control bg-light">{{ vehicule.modele }}</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Immatriculation</label>
                        <div class="form-control bg-light">{{ vehicule.immatriculation }}</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Type</label>
                        <div class="form-control bg-light">{{ vehicule.type }}</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Couleur</label>
                        <div class="form-control bg-light">{{ vehicule.couleur }}</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Kilométrage</label>
                        <div class="form-control bg-light">{{ vehicule.kilometrage }} km</div>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold">Statut</label>
                        <div class="form-control bg-light">{{ vehicule.statut }}</div>
                    </div>
                </div>

                <div class="mt-5 text-center">
                    <a href="{{ path('app_vehicule_index') }}" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                    </a>
                </div>


                    <div class="mt-3 text-center">
                        <a href="{{ path('app_vehicule_edit', {'idVehicule': vehicule.getIdVehicule()}) }}" class="btn btn-warning px-4 py-2 rounded-pill shadow-sm me-2">
                            <i class="fas fa-edit me-2"></i> Modifier
                        </a>

                        {{ include('FrontOffice/vehicule/_delete_form.html.twig') }}
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
