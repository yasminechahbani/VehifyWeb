{# templates/BackOffice/carte_grise/edit.html.twig #}

{% extends 'BackOffice/base.html.twig' %}

{% block title %}Modifier la Carte Grise{% endblock %}

{% block content %}
    <div class="container my-4">
        <h1 class="mb-4">Modifier la Carte Grise</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.numeroCarteGrise) }}
            {{ form_widget(form.numeroCarteGrise, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.numeroCarteGrise) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.proprietaire) }}
            {{ form_widget(form.proprietaire, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.proprietaire) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.adresseProprietaire) }}
            {{ form_widget(form.adresseProprietaire, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresseProprietaire) }}
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateEmission) }}
                {{ form_widget(form.dateEmission, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateEmission) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.dateExpiration) }}
                {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateExpiration) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.user) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.user) }}
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Modifier la Carte Grise</button>
        </div>

        {{ form_end(form) }}
         <a href="{{ path('app_liste') }}" class="btn btn-secondary">Retour Ã  la liste</a>
    </div>
{% endblock %}
